# ===========================================
# SOLAR CRM API - Environment Variables
# ===========================================

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solar_crm
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Z-API (WhatsApp)
ZAPI_INSTANCE_ID=your_instance_id
ZAPI_TOKEN=your_zapi_token
ZAPI_CLIENT_TOKEN=your_client_token
ZAPI_BASE_URL=https://api.z-api.io

# Social Proof Video URL (for automated AI sales)
# Option 1: URL from cloud storage (recommended for production)
# PROVA_SOCIAL_VIDEO_URL=https://your-cloud-storage.com/prova-social.mp4
# Option 2: Served locally by the API (development)
PROVA_SOCIAL_VIDEO_URL=http://localhost:3000/api/video/prova-social.mp4

# Admin WhatsApp (for alerts)
ADMIN_PHONE=5511999999999

# ===========================================
# Meta (Facebook/Instagram) Lead Ads
# ===========================================
# Page Access Token (never-expiring, get from Graph API Explorer)
META_PAGE_ACCESS_TOKEN=your_page_access_token
# App ID from Meta Developer Console
META_APP_ID=your_app_id
# App Secret from Meta Developer Console
META_APP_SECRET=your_app_secret
# Verify Token (custom string for webhook verification)
META_VERIFY_TOKEN=solar_crm_verify

